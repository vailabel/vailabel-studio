{
  "name": "desktop",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "build": "webpack --config ./webpack.config.js --mode production",
    "start": "npm run build && electron ./dist/main.js",
    "watch": "webpack --config ./webpack.config.js --watch & nodemon --watch dist --exec electron ./dist/main.js",
    "dist": "npx electron-builder --config ./electron-builder.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.vailabel.studio",
    "publish": [
      {
        "provider": "github",
        "owner": "vailabel",
        "repo": "vailabel-studio"
      }
    ],
    "files": [
      "dist/**/*",
      "../web/out/**/*"
    ],
    "directories": {
      "output": "release"
    }
  },
  "devDependencies": {
    "@types/node": "^22.15.5",
    "electron": "^36.1.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "electron-updater": "^6.6.2"
  }
}
